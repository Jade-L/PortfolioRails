<div class='col s8'>
  <%= image_tag(@project.img.url(), class: "responsive-img") %>
</div>
<div class="col s4">
  <%= "<h2>#{@project.title}</h2>".html_safe %>
  <%= "#{@project.description}".html_safe %>
  <%= link_to @project.url, target: '_blank', class: 'waves-effect waves-light btn' do %>
    <i class="fa fa-github-alt left"></i> Repository
  <% end %>
  <%= link_to static_pages_close_details_path, remote: true, class: 'waves-effect waves-light btn right' do %>
    <i class="material-icons left">close</i> Close
  <% end %>
</div>
